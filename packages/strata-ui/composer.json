{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "stratos/strata-ui",
    "description": "A modern Blade and Livewire component library for Laravel",
    "keywords": [
        "laravel",
        "livewire",
        "blade",
        "components",
        "ui",
        "tailwind",
        "alpine"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chaab",
            "email": "chaab@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/view": "^12.0",
        "livewire/livewire": "^3.6"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Stratos\\StrataUI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stratos\\StrataUI\\Tests\\": "tests/"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Stratos\\StrataUI\\StrataUIServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
